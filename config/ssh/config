
Match host * exec "gpg-connect-agent UPDATESTARTUPTTY /bye"

IdentitiesOnly yes
IdentityFile ~/.ssh/id_rsa


Host gollum
  Hostname gollum.local
  User pi

Host smaug
  Hostname smaug.local
  User pi

Host frodo
  Hostname frodo.local
  User volumio

Host gimli
  Hostname gimli.local
  User root

Host thorin
  Hostname thorin.local
  User pi

Host gandalf
  Hostname gandalf.local
  User rsmit

Host radagast
  Hostname radagast.local
  User rsmit


Host github.com
  HostName github.com
  User git
  IdentityFile ~/.ssh/id_rsa_github
  ForwardAgent no
  ForwardX11 no
  PermitLocalCommand no
  UseRoaming no
  # Connexion sharing for 60 seconds, for speedup
  ControlMaster auto
  ControlPath ~/.ssh/conn-%n
  ControlPersist 60s
