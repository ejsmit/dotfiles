  User rsmit


Host github.com
  HostName github.com
  User git
  IdentityFile ~/.ssh/id_rsa_github
  ForwardAgent no
  ForwardX11 no
  PermitLocalCommand no
  UseRoaming no
  # Connexion sharing for 60 seconds, for speedup
  ControlMaster auto
  ControlPath ~/.ssh/conn-%n
  ControlPersist 60s
