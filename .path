#!/bin/bash

# assume exports have been loaded and nothing else


# set npm path
if [ -d "$HOME/n/bin" ] ; then
    PATH="$HOME/n/bin:$PATH"
fi

# set PATH so it includes user's private bin if it exists
if [ -d "$HOME/bin" ] ; then
    PATH="$HOME/bin:$PATH"
fi

# set PATH so it includes user's private bin if it exists
if [ -d "$HOME/.local/bin" ] ; then
    PATH="$HOME/.local/bin:$PATH"
fi




# Rust path
[[ -d ~/.cargo/bin ]] && export PATH="$PATH:$HOME/.cargo/bin"
