#!/bin/bash

# assume exports have been loaded and nothing else


# add both local bin alternatives
export PATH="$HOME/bin:$HOME/.local/bin:$PATH";

# if anaconda3 is installed then use it
[[ -d ~/anaconda3 ]] && export PATH="$HOME/anaconda3/bin:$PATH";


# java
# use the linux alternatives system to point to the correct binaries for now


# some OS specific paths
case $OSTYPE in
  darwin*)
    PATH="/usr/local/opt/coreutils/libexec/gnubin:$PATH"
    MANPATH="/usr/local/opt/coreutils/libexec/gnuman:$MANPATH"
    ;;
  *)

    ;;
esac
